{
  "input": {
    "data_structure": "config_data_structure.json",
    "input_type": "kafka",
    "options": {
      "server": "192.168.1.1",
      "port": 29092,
      "topic": "testtag01",
      "batchDuration": 10,
      "sep": ","
    }
  },
  "output": {
    "method": "influx",
    "options": {
      "influx": {
        "host": "localhost",
        "port": 8086,
        "username": "root",
        "password": "root",
        "database": "test",
        "measurement": "points"
      }
    }
  },
  "processing": {
    "transformation": "source_ip: src_ip; dst_ip;src_country: country_of(src_ip);traffic: mult(packet_size,sampling_rate)",
    "aggregations": {
			"operation_type": "reduce",
 			"rule": "Min(traffic); Sum(traffic)"
		}
  }
}